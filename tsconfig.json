{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"],
    "noEmit": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "paths": {
      "🛠️": ["./util/index"],
      "🛠️/*": ["./util/*"],
      "📦/*": ["./packages/*"]
    }
  },
  "include": ["util", "packages", "test", "type.d.ts"],
  "exclude": ["node_modules"]
}
